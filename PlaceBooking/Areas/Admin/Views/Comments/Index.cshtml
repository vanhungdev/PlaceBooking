@model IEnumerable<PlaceBooking.Models.Comment>

@{
    ViewBag.Title = "topic";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->


<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lý Bình luận </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Quản Lý bình luận</li>
            </ol>
        </div>
    </div>
</div>


<section class=" ">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5">
                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th width="30%">Tên tài khoản</th>
                            <th width="20%">Id tài khoản</th>
                            <th>Comment</th>
                            <th>ParentId</th>
                            <th width="20%">Chức Năng</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><img width="20px" src="@Html.DisplayFor(modelItem => item.Image)"></td>
                            <td><a class=" font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.UserName)</a></td>
                            <td> @Html.DisplayFor(modelItem => item.UserId)</td>
                            <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.Comment1)</td>
                            <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.ParentID)</td>
                            <td>
                                <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "Comments", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                            </td>
                            <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>
<script>
        $("#topic").addClass("active");
</script>
