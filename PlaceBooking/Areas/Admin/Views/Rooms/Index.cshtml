@model IEnumerable<PlaceBooking.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lý trung tâm</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Home</a></li>
                <li class="breadcrumb-item active m-0">Quản lý trung tâm</li>
            </ol>
        </div>
    </div>
</div>

<section class="">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5">
                    <a class="text-white btn-sm btn-success" href="~/admin/Rooms/Create">Thêm <i class="fas fa-plus"></i></a>
                    <a class="text-white btn-sm btn-danger " href="~/admin/Rooms/trash">Thùng rác<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên trung tâm</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                            <th>Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string name = item.Name;
                            <tr>
                                <td> <img width="50" src="~/Public/images/roomBooking/@item.Img" /></td>
                                <td>@item.Name</td>
                                <td style="font-size:14px;">@item.Price.ToString("N0") VND</td>
                                <td style="font-size:14px;">
                                    @if (item.Status == 1)
                                    {
                                        <p class="text-success"> Đang mở cho thuê</p>
                                    }
                                    else
                                    {
                                        <p class="text-warning"> Tạm nghỉ</p>
                                    }
                                </td>
                                <td>
                                    @if (ViewBag.Accessname == "ADMIN")
                                    {
                                        if (item.Status == 1)
                                        {
                                            <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Rooms", new { id = item.Id })"> <i class="fas fa-toggle-on"></i> </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Rooms", new { id = item.Id })"> <i class="fas fa-toggle-off"></i> </a>
                                        }
                                    }
                                    else
                                    {
                                        if (item.Status == 1)
                                        {
                                            <a class="btn btn-sm btn-light text-success border a33" > Đã duyệt </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-light text-danger border a33" >Chờ duyệt </a>
                                        }
                                    }
                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Rooms", new { id = item.Id })"> <i class="fas fa-trash-alt"></i></a>
                                    <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "Rooms", new { id = item.Id })">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td class="text-cam">@Html.DisplayFor(modelItem => item.Id)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>